{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",

    "declaration": true,
    "removeComments": true,

    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "Node16",
    "incremental": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "noImplicitAny": true,
    "noUnusedLocals": true,
  },
  "include": ["src", "migrations", "typeOrm.config.ts"]
}
